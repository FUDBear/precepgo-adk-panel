service firebase.storage {
  match /b/{bucket}/o {
    // Deny all read and write operations on files in the 'backups' directory
    match /backups/{allPaths=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read/write agent_assets (for image generation)
    match /agent_assets/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read/write avatars
    match /avatars/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow public read access for everything else (but no write)
    match /{allPaths=**} {
      allow read;
    }
  }
}

